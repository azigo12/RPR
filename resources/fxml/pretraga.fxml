<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <HBox spacing="15">
            <padding>
                <Insets left="15" right="15" top="15" bottom="15"/>
            </padding>
            <Label text="%uzorak"/>
            <TextField fx:id="uzorak" minWidth="120"/>
            <Button fx:id="btnTrazi" text="%trazi" onAction="#pretraziFajlove"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="tabelaPutanja">
            <columns>
                <TableColumn fx:id="colPutanje" minWidth="350"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
